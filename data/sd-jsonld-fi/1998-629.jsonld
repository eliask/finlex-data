nguageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/17/momentti/3/ajantasa/20090101/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/17/momentti/3/ajantasa/20090101/fin/txt","content_fi":"Kielten opetuksessa opiskelijalta arvioidaan kielitaidon muiden osa-alueiden lisäksi suullinen kielitaito. Suullista kielitaitoa arvioidaan erillisellä kokeella, jonka laatimisesta vastaa opetushallitus. Suullisen kielitaidon kokeen sisällöstä säädetään valtioneuvoston asetuksella."}}},{"@id":"sfsd:1998/629/luku/4/pykala/17/momentti/4/ajantasa/20090101","@type":"sfl:SubsectionVersion","isMemberOf":"sfsd:1998/629/luku/4/pykala/17/momentti/4","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/17/momentti/4/ajantasa/20090101/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/17/momentti/4/ajantasa/20090101/fin/txt","content_fi":"Valtioneuvoston asetuksella säädetään opintosuoritusten arvioinnista opintojen aikana, opinnoissa etenemisestä sekä päättötodistuksesta ja muista opiskelijalle annettavista todistuksista. Opetushallitus antaa opintosuoritusten arvioinnista tarkentavia määräyksiä ja päättää todistuksiin merkittävistä tiedoista."}}}],"isMemberOf":"sfsd:1998/629/luku/4/pykala/17","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/17/ajantasa/20090101/fin","title_fi":"Opiskelijan arviointi"}},{"@id":"sfsd:1998/629/luku/4/pykala/17a/ajantasa/20090101","@type":"sfl:SectionVersion","amendedBy":"sfsd:2008/1116/alkup","hasPart":{"@id":"sfsd:1998/629/luku/4/pykala/17a/momentti/1/ajantasa/20090101","@type":"sfl:SubsectionVersion","isMemberOf":"sfsd:1998/629/luku/4/pykala/17a/momentti/1","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/17a/momentti/1/ajantasa/20090101/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/17a/momentti/1/ajantasa/20090101/fin/txt","content_fi":"Kunkin oppiaineen tai aineryhmän arvioinnista päättää opiskelijan opettaja tai, jos opettajia on useita, opettajat yhdessä. Päättöarvioinnista päättävät rehtori ja opiskelijan opettajat yhdessä."}}},"isMemberOf":"sfsd:1998/629/luku/4/pykala/17a","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/17a/ajantasa/20090101/fin","title_fi":"Opiskelijan arvioinnista päättäminen"}},{"@id":"sfsd:1998/629/luku/4/pykala/18/ajantasa/20060101","@type":"sfl:SectionVersion","amendedBy":"sfsd:2004/766/alkup","hasPart":[{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/1/ajantasa/20040901","@type":"sfl:SubsectionVersion","isMemberOf":"sfsd:1998/629/luku/4/pykala/18/momentti/1","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/1/ajantasa/20040901/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/1/ajantasa/20040901/fin/txt","content_fi":"Lukiokoulutuksen päätteeksi pannaan toimeen ylioppilastutkinto. Tutkinnon avulla selvitetään, ovatko opiskelijat omaksuneet lukion opetussuunnitelman mukaiset tiedot ja taidot sekä saavuttaneet lukiokoulutuksen tavoitteiden mukaisen riittävän kypsyyden. Tutkintoon sisältyy äidinkielessä ja kirjallisuudessa, toisessa kotimaisessa kielessä, vieraissa kielissä, matematiikassa ja reaaliaineissa järjestettäviä kokeita."}}},{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/2/ajantasa/20040901","@type":"sfl:SubsectionVersion","isMemberOf":"sfsd:1998/629/luku/4/pykala/18/momentti/2","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/2/ajantasa/20040901/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/2/ajantasa/20040901/fin/txt","content_fi":"Ylioppilastutkintoon kuuluu vähintään neljä koetta. Tutkintoon osallistuvan on suoritettava äidinkielessä ja kirjallisuudessa järjestettävä koe sekä valintansa mukaan kolme koetta ryhmästä, johon kuuluvat toisessa kotimaisessa kielessä, yhdessä vieraassa kielessä, matematiikassa ja reaaliaineissa järjestettävä koe. Näiden kokeiden lisäksi tutkintoon osallistuva voi suorittaa yhden tai useamman ylimääräisen kokeen."}}},{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/3/ajantasa/20060101","@type":"sfl:SubsectionVersion","amendedBy":"sfsd:2005/673/alkup","isMemberOf":"sfsd:1998/629/luku/4/pykala/18/momentti/3","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/3/ajantasa/20060101/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/3/ajantasa/20060101/fin/txt","content_fi":"Ylioppilastutkinnon järjestämisestä säädetään erikseen lailla. Valtioneuvoston asetuksella annetaan tarkempia säännöksiä osallistumisesta ylioppilastutkintoon, kokeista ja niiden uusimisesta, arvostelusta ja muusta tutkinnon toimeenpanosta.\n(26.8.2005/673)"}}},{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/4/ajantasa/20040901","@type":"sfl:SubsectionVersion","isMemberOf":"sfsd:1998/629/luku/4/pykala/18/momentti/4","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/4/ajantasa/20040901/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/18/momentti/4/ajantasa/20040901/fin/txt","content_fi":"Ylioppilastutkinnon suorittaminen tuottaa yleisen jatko-opintokelpoisuuden korkeakouluihin."}}}],"isMemberOf":"sfsd:1998/629/luku/4/pykala/18","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/18/ajantasa/20060101/fin","title_fi":"Ylioppilastutkinto"}},{"@id":"sfsd:1998/629/luku/4/pykala/18a/ajantasa/20180101","@type":"sfl:SectionVersion","amendedBy":"sfsd:2017/534/alkup","hasPart":[{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/ajantasa/20180101","@type":"sfl:SubsectionVersion","hasPart":[{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/johdanto/ajantasa/20180101","@type":"sfl:PreambleVersion","isMemberOf":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/johdanto","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/johdanto/ajantasa/20180101/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/johdanto/ajantasa/20180101/fin/txt","content_fi":"Muu henkilö kuin lukion oppimäärää suorittava opiskelija saa osallistua ylioppilastutkintoon ja siihen kuuluviin kokeisiin, jos hän on suorittanut:"}}},{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/1/ajantasa/20180101","@type":"sfl:ParagraphVersion","isMemberOf":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/1","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/1/ajantasa/20180101/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/1/ajantasa/20180101/fin/txt","content_fi":"1) lukion oppimäärän tai vastaavan ulkomaisen lukion oppimäärän;"}}},{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/2/ajantasa/20180101","@type":"sfl:ParagraphVersion","isMemberOf":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/2","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/2/ajantasa/20180101/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/2/ajantasa/20180101/fin/txt","content_fi":"2) ammatillisesta koulutuksesta annetussa laissa (531/2017) tarkoitetun ammatillisen perustutkinnon tai sitä vastaavan aiemman tutkinnon;"}}},{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/3/ajantasa/20180101","@type":"sfl:ParagraphVersion","isMemberOf":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/3","version":"sfl:Consolidated","versionDate":"2018-08-01","languageVersion":{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/3/ajantasa/20180101/fin","hasFormat":{"@id":"sfsd:1998/629/luku/4/pykala/18a/momentti/1/kohta/3/ajantasa/20180101/fin/txt","content_fi