    <met:Nimeke>
      <met1:NimekeTeksti>om ändring av semesterlagen för sjömän </met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>RP 199/95</sis1:ViiteTeksti>
      </met:Muu1Viite>
