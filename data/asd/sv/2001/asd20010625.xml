    </asi:EduskuntaTunniste>
    <met:Nimeke>
      <met1:NimekeTeksti>om kommunikationsförvaltningen</met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
