      <met1:NimekeTeksti>om ändring av vägtrafiklagen</met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>Regeringens proposition 285/90</sis1:ViiteTeksti>
      </met:Muu1Viite>
      <met:Muu2Viite>
