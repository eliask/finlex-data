              <tau:colspec colnum="2" colname="2" colwidth=""/>
              <tau:tbody valign="top">
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>i I avgiftsklassen</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
