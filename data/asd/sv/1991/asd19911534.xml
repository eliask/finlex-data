    <met:Nimeke>
      <met1:NimekeTeksti>om ändring av lagen om bränsleaccis </met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>Regeringens proposition 71/91 </sis1:ViiteTeksti>
      </met:Muu1Viite>
      <met:Muu2Viite>
        <sis1:ViiteTeksti>Statsutsk. bet. 44/91 </sis1:ViiteTeksti>
      </met:Muu2Viite>
    </met:AsiakirjaViitteet>
