    <met:Nimeke>
      <met1:NimekeTeksti>om ändring av lagen om överlastavgift</met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>Regeringens proposition 185/88</sis1:ViiteTeksti>
      </met:Muu1Viite>
