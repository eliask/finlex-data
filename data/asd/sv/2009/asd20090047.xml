    <met:Nimeke>
      <met1:NimekeTeksti>om godkännande av läkare som sjömansläkare</met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>RP 168/2008</sis1:ViiteTeksti>
      </met:Muu1Viite>
