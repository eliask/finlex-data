    <met:Nimeke>
      <met1:NimekeTeksti>om ändring av rättegångsbalken</met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>RP 233/2008</sis1:ViiteTeksti>
      </met:Muu1Viite>
