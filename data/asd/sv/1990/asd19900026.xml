      <met1:NimekeTeksti>om ändring av byggnadslagen</met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>Regeringens proposition 95/89</sis1:ViiteTeksti>
      </met:Muu1Viite>
