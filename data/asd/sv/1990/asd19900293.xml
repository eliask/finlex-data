                      <sis:KappaleKooste>Annat lastfartyg</sis:KappaleKooste>
                    </tau:entry>
                    <tau:entry>
                      <sis:KappaleKooste>Passagerarfartyg</sis:KappaleKooste>
                    </tau:entry>
                  </tau:row>
                  <tau:row>
                    <tau:entry>
                      <sis:KappaleKooste>Under 150</sis:KappaleKooste>
                    </tau:entry>
                    <tau:entry>
                      <sis:KappaleKooste>265 mk</sis:KappaleKooste>
                    </tau:entry>
                    <tau:entry>
                      <sis:KappaleKooste>315 mk</sis:KappaleKooste>
                    </tau:entry>
                    <tau:entry>
                      <sis:KappaleKooste>530 mk</sis:KappaleKooste>
                    </tau:entry>
                  </tau:row>
                  <tau:row>
                    <tau:entry>
                      <sis:KappaleKooste>150-500</sis:KappaleKooste>
                    </tau:entry>
                    <tau:entry>
                      <sis:KappaleKooste>315 mk</sis:KappaleKooste>
                    </tau:entry>
                    <tau:entry>
                      <sis:KappaleKooste>530 mk</sis:KappaleKooste>
                    </tau:entry>
                    <tau:entry>
                      <sis:KappaleKooste>740 mk</sis:KappaleKooste>
                    </tau:entry>
                  </tau:row>
                  <tau:row>
                    <tau:entry>
                      <sis:KappaleKooste>över 500</sis:KappaleKooste>
                    </tau:entry>
                    <tau:entry>
                      <sis:KappaleKooste>420 mk</sis:KappaleKooste>
                    </tau:entry>
                    <tau:entry>
