                  <tau:colspec colnum="2" colname="2" colwidth="50*"/>
                  <tau:tbody>
                    <tau:row>
                      <tau:entry>
                        <sis:KappaleKooste>Provningsobjekt</sis:KappaleKooste>
                      </tau:entry>
                      <tau:entry>
                        <sis:KappaleKooste>Återsugningsskydd</sis:KappaleKooste>
                      </tau:entry>
                    </tau:row>
                    <tau:row>
                      <tau:entry>
                        <sis:KappaleKooste>Utloppspip</sis:KappaleKooste>
                      </tau:entry>
                      <tau:entry>
                        <sis:KappaleKooste>Luftgap ≥ 25 mm</sis:KappaleKooste>
                      </tau:entry>
                    </tau:row>
                    <tau:row>
                      <tau:entry>
                        <sis:KappaleKooste>Handdusch</sis:KappaleKooste>
                      </tau:entry>
