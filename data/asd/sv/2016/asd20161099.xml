  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="sv" saa1:saadostyyppiNimi="Päätös">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Skatteförvaltningens beslut</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>om den undre gränsen och uppbördsraterna för förskott</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Skatteförvaltningen har med stöd av 6 § 2 mom. i lagen om förskottsuppbörd (1118/1996), sådant det lyder i lagen 775/2016, beslutat:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="1 §">
          <saa:PykalaTunnusKooste>1 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Undre gräns för förskott</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Förskott fastställs inte, om dess belopp skulle vara mindre än 170,00 euro.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="2 §">
          <saa:PykalaTunnusKooste>2 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Förskottets uppbördsrater</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Förskott uppbärs, beroende på förskottets storlek, i två eller flera jämnstora rater med en cents noggrannhet som följer:</saa:MomenttiKooste>
          <tau:table>
            <tau:tgroup colsep="1" cols="3" rowsep="1">
              <tau:colspec colnum="1" colname="1" colwidth="33*"/>
              <tau:colspec colnum="2" colname="2" colwidth="33*"/>
              <tau:colspec colnum="3" colname="3" colwidth="33*"/>
              <tau:tbody>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>Förskottsbelopp som uppbärs euro</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>Antal uppbördsrater</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>Uppbördsmånader</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>170,00 – 500,00</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>2</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>mars och september</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>över 500,00 men högst 1 700,00</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>3</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>februari, juli och november</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>över 1 700,00 men högst 
10 000,00</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>6</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>februari, april, juni, augusti, oktober och december</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
