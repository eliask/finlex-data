      <met1:NimekeTeksti>om ändring av avfallslagen </met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>RP 323/94</sis1:ViiteTeksti>
      </met:Muu1Viite>
