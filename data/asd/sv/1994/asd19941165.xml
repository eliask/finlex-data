    <met:Nimeke>
      <met1:NimekeTeksti>om Räddningsinstitutet </met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>RP 172/94</sis1:ViiteTeksti>
      </met:Muu1Viite>
