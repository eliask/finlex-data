      <met1:NimekeTeksti>om ändring av religionsfrihetslagen </met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>RP 44/93</sis1:ViiteTeksti>
