                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>Mängd sprängämne </sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>På bebott område</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>På annat område</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>1. Över 500 kg per dygn eller över 10 kg i laddningsutrymmet</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>överladdare</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
