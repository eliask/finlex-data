    <met:Nimeke>
      <met1:NimekeTeksti>om ändring av arbetsavtalslagen</met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>RP 107/2019</sis1:ViiteTeksti>
      </met:Muu1Viite>
