    <met:Nimeke>
      <met1:NimekeTeksti>om ändring av yrkessjukdomslagen </met1:NimekeTeksti>
    </met:Nimeke>
    <met:AsiakirjaViitteet>
      <met:Muu1Viite>
        <sis1:ViiteTeksti>RP 324/92</sis1:ViiteTeksti>
