  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="fi" saa1:saadostyyppiNimi="Asetus">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Valtioneuvoston asetus</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>Energiavirastosta</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Valtioneuvoston päätöksen mukaisesti säädetään Energiavirastosta annetun lain (870/2013) 7 §:n nojalla:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="1 §">
          <saa:PykalaTunnusKooste>1 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Ylijohtajan sijainen</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Ylijohtajan ollessa estynyt toimii hänen sijaisenaan ylijohtajan määräämä Energiaviraston virkamies.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="2 §">
          <saa:PykalaTunnusKooste>2 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Henkilöstö</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Energiavirastossa on ylijohtajan lisäksi viraston talousarvion rajoissa sen tehtävien edellyttämä määrä muuta henkilöstöä.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="3 §">
          <saa:PykalaTunnusKooste>3 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Henkilöstön kelpoisuusvaatimukset</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Yleisenä kelpoisuusvaatimuksena Energiaviraston virkoihin on sellainen taito ja kyky, jota viran menestyksellinen hoitaminen edellyttää. Välittömästi ylijohtajan alaisena toimivan yksikön päälliköltä vaaditaan lisäksi ylempi korkeakoulututkinto ja tehtävän edellyttämä monipuolinen kokemus sekä käytännössä osoitettua johtamistaitoa.</saa:MomenttiKooste>
          <saa:MomenttiKooste>Ylijohtajan kelpoisuusvaatimuksista säädetään erikseen.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="4 §">
          <saa:PykalaTunnusKooste>4 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Henkilöstön nimittäminen ja ottaminen</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Ylijohtaja nimittää Energiaviraston muut virkamiehet sekä ottaa viraston työsopimussuhteisen henkilöstön, ellei työjärjestyksessä toisin määrätä.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="5 §">
          <saa:PykalaTunnusKooste>5 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Talousarvion toimeenpano</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Energiavirasto toimeenpanee itsenäisesti sille osoitetun talousarvion siten kuin valtion talousarviosta erikseen säädetään.</saa:MomenttiKooste>
          <saa:MomenttiKooste>Energiaviraston tulojen ja menojen hyväksymisestä määrätään viraston työjärjestyksessä.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="6 §">
          <saa:PykalaTunnusKooste>6 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Työjärjestys</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Energiaviraston organisaatiosta, henkilöstön tehtävistä, asioiden käsittelystä ja ratkaisemisesta sekä toiminnan muusta järjestelystä määrätään lisäksi työjärjestyksessä, jonka vahvistaa ylijohtaja.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="VoimaantuloPykala" saa1:identifiointiTunnus="7 §">
          <saa:PykalaTunnusKooste>7 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Voimaantulo</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Tämä asetus tulee voimaan 1 päivänä tammikuuta 2014.</saa:MomenttiKooste>
        </saa:Pykala>
      </saa:Pykalisto>
    </saa:Saados>
