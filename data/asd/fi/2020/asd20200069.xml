  </asi:IdentifiointiOsa>
  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="fi" saa1:saadostyyppiNimi="Asetus">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Valtioneuvoston asetus</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>tartuntataudeista annetun valtioneuvoston asetuksen 1 §:n muuttamisesta</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Valtioneuvoston päätöksen mukaisesti</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste><saa:SaadosKursiiviKooste>muutetaan</saa:SaadosKursiiviKooste> tartuntataudeista annetun valtioneuvoston asetuksen (146/2017) 1 § seuraavasti:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="1 §">
          <saa:PykalaTunnusKooste>1 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Yleisvaaralliset tartuntataudit</saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Yleisvaarallisia tartuntatauteja ovat:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>1) EHEC-bakteerin aiheuttama tauti;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>2) hepatiitti A;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>3) hepatiitti E;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>4) A-tyypin influenssaviruksen H5N1- tai H7N9-alatyypin taikka muun uuden tai harvinaisen alatyypin aiheuttama tauti;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>5) isorokko;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>6) kolera;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>7) kuppa;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>8) kurkkumätä;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>9) lavantauti, pikkulavantauti ja muu salmonelloihin kuuluvan bakteerin aiheuttama tauti;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>10) meningokokin aiheuttama vaikea yleisinfektio ja aivokalvontulehdus;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>11) pernarutto;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>12) polio;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>13) rutto;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>14) SARS, MERS ja muu uuden koronavirustyypin aiheuttama vaikea infektio;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>15) shigellapunatauti;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>16) tuberkuloosi;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>17) tuhkarokko;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>18) Ebola, Lassa, Marburg, Krimin-Kongon verenvuotokuume ja muut virusten aiheuttamat verenvuotokuumeet.</saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <sis:Palstaviiva/>
        <saa:Pykala saa1:identifiointiTunnus="Voimaantulo" saa1:pykalaLuokitusKoodi="VoimaantuloSaannos">
          <saa:MomenttiKooste>Tämä asetus tulee voimaan 14 päivänä helmikuuta 2020.</saa:MomenttiKooste>
