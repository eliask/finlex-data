  <asi:IdentifiointiOsa>
    <met1:AsiakirjatyyppiNimi>Vahvistettava laki</met1:AsiakirjatyyppiNimi>
    <asi:EduskuntaTunniste>
      <met1:AsiakirjatyyppiKoodi>SDK</met1:AsiakirjatyyppiKoodi>
      <asi1:AsiakirjaNroTeksti>567</asi1:AsiakirjaNroTeksti>
      <asi1:ValtiopaivavuosiTeksti>2024</asi1:ValtiopaivavuosiTeksti>
    </asi:EduskuntaTunniste>
    <met:Nimeke>
      <met1:NimekeTeksti>lainhuuto- ja kiinnitysrekisteristä annetun asetuksen muuttamisesta</met1:NimekeTeksti>
    </met:Nimeke>
  </asi:IdentifiointiOsa>
  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="fi" saa1:saadostyyppiNimi="Asetus">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Valtioneuvoston asetus</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>lainhuuto- ja kiinnitysrekisteristä annetun asetuksen muuttamisesta</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Valtioneuvoston päätöksen mukaisesti </saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste><saa:SaadosKursiiviKooste>kumotaan</saa:SaadosKursiiviKooste> lainhuuto- ja kiinnitysrekisteristä annetun asetuksen (960/1996) 11 §,</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste><saa:SaadosKursiiviKooste>muutetaan</saa:SaadosKursiiviKooste> 4 §:n 2 momentin 4 kohta sekä 30 §:n 1 momentin 3 ja 4 kohta ja 2 momentti,</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste>sellaisena kuin niistä on 30 §:n 2 momentti asetuksessa 821/2013, sekä</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste><saa:SaadosKursiiviKooste>lisätään</saa:SaadosKursiiviKooste> 4 §:n 2 momenttiin, sellaisena kuin se on osaksi asetuksessa 821/2013, uusi 5 kohta, asetukseen uusi 6 a §, 7 §:ään uusi 3 momentti ja 30 §:n 1 momenttiin, sellaisena kuin se on osaksi asetuksessa 821/2013, uusi 5 kohta seuraavasti:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="4 §">
          <saa:PykalaTunnusKooste>4 §</saa:PykalaTunnusKooste>
          <sis:Katkoviiva/>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Asian laadusta merkitään, koskeeko hakemus:</saa:MomenttiJohdantoKooste>
            <sis:Katkoviiva/>
            <saa:MomenttiKohtaKooste>4) panttaamattomuussitoumuksen kirjaamista tai kirjauksen poistamista;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>5) rekisteriin merkityn ratkaisun täsmentämistä tai virheen korjaamista taikka muuta rekisteriin merkittävää tietoa.</saa:MomenttiKohtaKooste>
            <sis:Katkoviiva/>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="6 a §">
          <saa:PykalaTunnusKooste>6 a §</saa:PykalaTunnusKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Panttaamattomuussitoumuksen kirjaamista koskevasta hakemuksesta merkitään:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>1) velkoja, jolle sitoumus on annettu;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>2) sitoumuksen voimassaoloaika;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>3) sitoumuksen päiväys; ja</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>4) sitoumuksen kohde.</saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="7 §">
          <saa:PykalaTunnusKooste>7 §</saa:PykalaTunnusKooste>
          <sis:Katkoviiva/>
          <saa:MomenttiKooste>Panttaamattomuussitoumuksen kirjauksen poistamista koskevasta hakemuksesta merkitään sen ratkaisun päivämäärä ja asianumero, johon hakemus kohdistuu.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="30 §">
          <saa:PykalaTunnusKooste>30 §</saa:PykalaTunnusKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Rasitustodistuksesta on käytävä ilmi kiinteistöön kohdistuvista oikeuksista ja rasituksista:</saa:MomenttiJohdantoKooste>
            <sis:Katkoviiva/>
            <saa:MomenttiKohtaKooste>3) vireillä oleva kiinnitystä tai erityisen oikeuden kirjaamista koskeva hakemus;</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>4) lakisääteinen panttioikeus ja muu lainhuuto- ja kiinnitysrekisteriin merkitty muistutustieto; ja</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>5) panttaamattomuussitoumus, sitoumuksen voimassaoloaika ja velkoja, jolle sitou-mus on annettu.</saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
          <saa:MomenttiKooste>Kiinnityksestä ja muista kirjauksista on käytävä ilmi niiden kohde. Kiinnityksestä ja muista kuin panttaamattomuussitoumusta koskevista kirjauksista on lisäksi käytävä ilmi niiden etusija.</saa:MomenttiKooste>
          <sis:Katkoviiva/>
        </saa:Pykala>
        <sis:Palstaviiva/>
        <saa:Pykala saa1:identifiointiTunnus="Voimaantulo" saa1:pykalaLuokitusKoodi="VoimaantuloSaannos">
          <saa:MomenttiKooste>Tämä asetus tulee voimaan 1 päivänä marraskuuta 2024.</saa:MomenttiKooste>
        </saa:Pykala>
      </saa:Pykalisto>
    </saa:Saados>
  </saa:SaadosOsa>
