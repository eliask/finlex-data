  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="fi" saa1:saadostyyppiNimi="Asetus">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Asetus</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>eräiden opetusministeriön ja sen hallinnonalojen virkojen perustamisesta ja lakkauttamisesta</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Opetusministerin esittelystä säädetään:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="1 §">
          <saa:PykalaTunnusKooste>1 §</saa:PykalaTunnusKooste>
          <saa:MomenttiKooste>Eduskunnan myönnettyä tarkoitukseen tarvittavat varat perustetaan ja lakkautetaan seuraavat peruspalkkaiset ja sopimuspalkkaiset virat:</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="2 §">
          <saa:PykalaTunnusKooste>2 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Opetusministeriö </saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Perustetaan 1 päivästä maaliskuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
yksi S 28 sopimuspalkkaluokkaan kuuluva osastopäällikön (yleinen osasto) virka;
</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
yksi S 27 sopimuspalkkaluokkaan kuuluva neuvottelevan virkamiehen (yleinen osasto) virka; ja
</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
yksi A 27 palkkausluokkaan kuuluva apulaisosastopäällikön virka.
</saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Lakkautetaan 1 päivästä maaliskuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
yksi A 28 palkkausluokkaan kuuluva hallitusneuvoksen, osastopäällikkönä virka; ja
</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
yksi A 27 palkkausluokkaan kuuluva neuvottelevan virkamiehen virka.
</saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="3 §">
          <saa:PykalaTunnusKooste>3 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Sibelius-Akatemia </saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Perustetaan 1 päivästä syyskuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
yksi A 27 palkkausluokkaan kuuluva professorin (kirkkomusiikki) virka.
</saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="4 §">
          <saa:PykalaTunnusKooste>4 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Taideteollinen korkeakoulu </saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Perustetaan 1 päivästä syyskuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
yksi S 27 sopimuspalkkaluokkaan kuuluva professorin (teollinen huonekalusuunnittelu) virka; ja
</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
kuusi A 25 palkkausluokkaan kuuluvaa apulaisprofessorin virkaa.
</saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="5 §">
          <saa:PykalaTunnusKooste>5 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Teatterikorkeakoulu </saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Perustetaan 1 päivästä syyskuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
yksi A 24 palkkausluokkaan kuuluva hallintojohtajan virka.
</saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="6 §">
          <saa:PykalaTunnusKooste>6 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Ammattikasvatushallitus </saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Perustetaan:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
kaksi S 23 sopimuspalkkaluokkaan kuuluvaa ylitarkastajan (rakennustoimisto, kuvataidealan koulutus) virkaa.
</saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="7 §">
          <saa:PykalaTunnusKooste>7 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Teknilliset oppilaitokset </saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Perustetaan 1 päivästä maaliskuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Rovaniemen teknilliseen oppilaitokseen:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 57 palkkausluokkaan kuuluva yliopettajan virka.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>1 päivästä elokuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Helsingin teknilliseen oppilaitokseen, Jyväskylän teknilliseen oppilaitokseen, Kotkan teknilliseen oppilaitokseen, Kuopion teknilliseen oppilaitokseen, Lahden teknilliseen oppilaitokseen, Mikkelin teknilliseen oppilaitokseen, Oulun teknilliseen oppilaitokseen, Tampereen teknilliseen oppilaitokseen, Turun teknilliseen oppilaitokseen ja Vaasan teknilliseen oppilaitokseen:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
kymmenen C 63 palkkausluokkaan kuuluvaa rehtorin virkaa.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Kajaanin teknilliseen oppilaitokseen, Kemin teknilliseen oppilaitokseen, Kokkolan teknilliseen oppilaitokseen, Lappeenrannan teknilliseen oppilaitokseen, Raahen tietokonealan oppilaitokseen, Rovaniemen teknilliseen oppilaitokseen, Tekniska läroanstalten i Ekenäs-nimiseen oppilaitokseen, Vasa tekniska läroanstalt-nimiseen oppilaitokseen ja Ylivieskan teknilliseen oppilaitokseen:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yhdeksän C 62 palkkausluokkaan kuuluvaa rehtorin virkaa.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Jyväskylän teknilliseen oppilaitokseen:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 57 palkkausluokkaan kuuluva yliopettajan virka.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Kajaanin teknilliseen oppilaitokseen:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 57 palkkausluokkaan kuuluva yliopettajan virka.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Oulun teknilliseen oppilaitokseen:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 57 palkkausluokkaan kuuluva yliopettajan virka.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Turun teknilliseen oppilaitokseen:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 57 palkkausluokkaan kuuluva yliopettajan virka.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Lakkautetaan 1 päivästä maaliskuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Rovaniemen teknillisestä oppilaitoksesta:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 51 palkkausluokkaan kuuluva lehtorin virka.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>1 päivästä elokuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Raahen tietokonealan oppilaitoksesta:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi S 23 sopimuspalkkaluokkaan kuuluva rehtorin virka.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="8 §">
          <saa:PykalaTunnusKooste>8 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Vammaisten ammattikoulut </saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Perustetaan 1 päivästä maaliskuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Perttulan erityisammattikouluun:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 55 palkkausluokkaan kuuluva johtajan virka;
</saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 50 palkkausluokkaan kuuluva apulaisjohtajan virka; ja
</saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
kaksi C 39 palkkausluokkaan kuuluvaa ammattiopettajan virkaa.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Kuhankosken erityisammattikouluun:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 55 palkkausluokkaan kuuluva johtajan virka;
</saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 50 palkkausluokkaan kuuluva apulaisjohtajan virka; ja
</saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 39 palkkausluokkaan kuuluva ammattiopettajan virka.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Lakkautetaan 1 päivästä maaliskuuta 1987 lukien:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Perttulan erityisammattikoulusta:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 52 palkkausluokkaan kuuluva johtajan virka;
</saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 46 palkkausluokkaan kuuluva apulaisjohtajan virka; ja
</saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
kaksi C 37 palkkausluokkaan kuuluvaa ammattiopettajan virkaa.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>
                <saa:SaadosKursiiviKooste>Kuhankosken erityisammattikoulusta:</saa:SaadosKursiiviKooste>
              </saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 52 palkkausluokkaan kuuluva johtajan virka;
</saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 46 palkkausluokkaan kuuluva apulaisjohtajan virka; ja
</saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>
yksi C 37 palkkausluokkaan kuuluva ammattiopettajan virka.
</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="9 §">
          <saa:PykalaTunnusKooste>9 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Suomen Akatemia </saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
