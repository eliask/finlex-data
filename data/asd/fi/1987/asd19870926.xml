        <saa:SaadosValiotsikkoKooste>2.3.Vapaa-ajan asunnot</saa:SaadosValiotsikkoKooste>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="9 §">
