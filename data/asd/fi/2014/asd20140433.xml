  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="fi" saa1:saadostyyppiNimi="Laki">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Laki</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>vesikulkuneuvorekisteristä annetun lain 39 ja 40 §:n muuttamisesta</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Eduskunnan päätöksen mukaisesti</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste><saa:SaadosKursiiviKooste>muutetaan</saa:SaadosKursiiviKooste> vesikulkuneuvorekisteristä annetun lain (424/2014) 39 ja 40 § seuraavasti:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="39 §">
          <saa:PykalaTunnusKooste>39 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Vesikulkuneuvon rekisteröintirikkomus</saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Vesikulkuneuvon omistaja, joka tahallaan tai huolimattomuudesta</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>1) jättää 8 §:n 1 momentissa säädetyn rekisteri-ilmoituksen tekemättä ennen vesikulkuneuvon käyttöönottoa,</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>2) jättää 9 §:n 1 momentissa säädetyn muutosrekisteröinnin tekemättä määräajassa tai</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>3) jättää 10 §:n 1 momentissa säädetyn lopullista poistoa koskevan rekisteri-ilmoituksen tekemättä määräajassa,</saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>on tuomittava <saa:SaadosKursiiviKooste>vesikulkuneuvon rekisteröintirikkomuksesta</saa:SaadosKursiiviKooste> sakkoon.</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
          <saa:MomenttiKooste>Vesikulkuneuvon rekisteröintirikkomuksesta tuomitaan myös vesikulkuneuvon haltija, joka tahallaan tai huolimattomuudesta jättää 9 §:n 2 momentissa säädetyn muutosrekisteröinnin tekemättä määräajassa.</saa:MomenttiKooste>
          <saa:MomenttiKooste>Rikesakosta vesikulkuneuvon rekisteröintirikkomuksen seuraamuksena säädetään rikesakkorikkomuksista annetun lain (756/2010) 12 §:n 2 momentin 1 kohdassa.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="40 §">
          <saa:PykalaTunnusKooste>40 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Käyttökieltorikkomus</saa:SaadosOtsikkoKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Joka tahallaan tai huolimattomuudesta käyttää vesikulkuneuvoa</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>1) ennen sen merkitsemistä rekisteriin 5 §:n 1 momentin vastaisesti,</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>2) rekisteritunnuksella varustamattomana 12 §:n 2 momentin vastaisesti tai</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
              <saa:MomenttiAlakohtaKooste>3) koetunnuksella varustamattomana 13 §:n 3 momentin vastaisesti,</saa:MomenttiAlakohtaKooste>
              <saa:MomenttiAlakohtaKooste>on tuomittava <saa:SaadosKursiiviKooste>käyttökieltorikkomuksesta</saa:SaadosKursiiviKooste> sakkoon.</saa:MomenttiAlakohtaKooste>
            </saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
          <saa:MomenttiKooste>Rikesakosta käyttökieltorikkomuksen seuraamuksena säädetään rikesakkorikkomuksista annetun lain 12 §:n 2 momentin 2 kohdassa.</saa:MomenttiKooste>
        </saa:Pykala>
        <sis:Palstaviiva/>
        <saa:Pykala saa1:identifiointiTunnus="Voimaantulo" saa1:pykalaLuokitusKoodi="VoimaantuloSaannos">
          <saa:MomenttiKooste>Tämä laki tulee voimaan samana päivänä kuin rikesakkorikkomuksista annettu laki.</saa:MomenttiKooste>
        </saa:Pykala>
