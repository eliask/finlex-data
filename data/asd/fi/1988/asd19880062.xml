  <asi:IdentifiointiOsa>
    <met1:AsiakirjatyyppiNimi>Vahvistettava laki</met1:AsiakirjatyyppiNimi>
    <asi:EduskuntaTunniste>
      <met1:AsiakirjatyyppiKoodi>SDK</met1:AsiakirjatyyppiKoodi>
      <asi1:AsiakirjaNroTeksti>62</asi1:AsiakirjaNroTeksti>
      <asi1:ValtiopaivavuosiTeksti>1988</asi1:ValtiopaivavuosiTeksti>
    </asi:EduskuntaTunniste>
    <met:Nimeke>
      <met1:NimekeTeksti>eräiden opetusministeriön ja sen hallinnonalojen virkojen perustamisesta ja lakkauttamisesta</met1:NimekeTeksti>
    </met:Nimeke>
  </asi:IdentifiointiOsa>
  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="fi" saa1:saadostyyppiNimi="Asetus">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Asetus</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>eräiden opetusministeriön ja sen hallinnonalojen virkojen perustamisesta ja lakkauttamisesta</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Opetusministerin esittelystä säädetään 24 päivänä lokakuuta 1986 annetun valtion virkamieslain (755/86) 6 ja 10§:n nojalla:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="1 §">
          <saa:PykalaTunnusKooste>1 §</saa:PykalaTunnusKooste>
          <saa:MomenttiKooste>Eduskunnan myönnettyä tarkoitukseen tarvittavat varat perustetaan ja lakkautetaan jäljempänä mainitut peruspalkkaiset ja sopimuspalkkaiset virat.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="2 §">
          <saa:PykalaTunnusKooste>2 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Opetusministeriö </saa:SaadosOtsikkoKooste>
          <ete>Perustetaan 1 päivästä maaliskuuta 1988 lukien:</ete>
          <saa:MomenttiKooste>yksi A 25 palkkausluokkaan kuuluva opetusneuvoksen virka;</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 24 palkkausluokkaan kuuluva ylitarkastajan virka;</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 22 palkkausluokkaan kuuluva ylitarkastajan virka; ja</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 20 palkkausluokkaan kuuluva rakennustarkastajan virka.</saa:MomenttiKooste>
          <ete>Lakkautetaan 1 päivästä maaliskuuta 1988 lukien:</ete>
          <saa:MomenttiKooste>yksi A 21 palkkausluokkaan kuuluva erikoistutkijan virka;</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 20 palkkausluokkaan kuuluva esittelijän virka; ja</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 17 palkkausluokkaan kuuluva toimistorakennusmestarin virka.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="3 §">
          <saa:PykalaTunnusKooste>3 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Ortodoksinen kirkko </saa:SaadosOtsikkoKooste>
          <ete>Perustetaan 1 päivästä syyskuuta 1988 lukien:</ete>
          <saa:MomenttiKooste>yksi A 17 palkkausluokkaan kuuluva tutkijan virka.</saa:MomenttiKooste>
          <ete>Lakkautetaan 1 päivästä elokuuta 1988 lukien:</ete>
          <saa:MomenttiKooste>yksi A 22 palkkausluokkaan kuuluva rehtorin virka;</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 19 palkkausluokkaan kuuluva opettajan virka;</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 8 palkkausluokkaan kuuluva emännän virka; ja</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 7 palkkausluokkaan kuuluva nuoremman vahtimestarin virka.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="4 §">
          <saa:PykalaTunnusKooste>4 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Valtion opintotukikeskus </saa:SaadosOtsikkoKooste>
          <ete>Perustetaan 1 päivästä maaliskuuta 1988 lukien:</ete>
          <saa:MomenttiKooste>yksi A 14 palkkausluokkaan kuuluva tarkastajan virka; ja</saa:MomenttiKooste>
          <saa:MomenttiKooste>kaksi A 9 palkkausluokkaan kuuluvaa kanslistin virkaa.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="5 §">
          <saa:PykalaTunnusKooste>5 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Kouluhallitus </saa:SaadosOtsikkoKooste>
          <ete>Perustetaan:</ete>
          <saa:MomenttiKooste>yksi A 20 palkkausluokkaan kuuluva suunnittelijan virka.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="6 §">
          <saa:PykalaTunnusKooste>6 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Ammattikasvatushallitus </saa:SaadosOtsikkoKooste>
          <ete>Perustetaan:</ete>
          <saa:MomenttiKooste>kaksi A 23 palkkausluokkaan kuuluvaa suunnittelijan virkaa; ja</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 22 palkkausluokkaan kuuluva suunnittelijan virka.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="7 §">
          <saa:PykalaTunnusKooste>7 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Vammaisten ammattikoulut </saa:SaadosOtsikkoKooste>
          <ete>Lakkautetaan:</ete>
          <saa:MomenttiKooste>yksi C 41 palkkausluokkaan kuuluva yleisaineiden opettajan virka.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="8 §">
          <saa:PykalaTunnusKooste>8 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Suomen Akatemia ja tieteen tukeminen </saa:SaadosOtsikkoKooste>
          <ete>Perustetaan 1 päivästä syyskuuta 1988 lukien:</ete>
          <saa:MomenttiKooste>yksi S 29 sopimuspalkkaluokkaan kuuluva tutkijaprofessorin virka;</saa:MomenttiKooste>
          <saa:MomenttiKooste>kaksi A 25 palkkausluokkaan kuuluvaa vanhemman tutkijan virkaa;</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 22 palkkausluokkaan kuuluva nuoremman tutkijan virka; ja</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 18 palkkausluokkaan kuuluva tutkimusassistentin virka.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="9 §">
          <saa:PykalaTunnusKooste>9 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Kotimaisten kielten tutkimuskeskus </saa:SaadosOtsikkoKooste>
          <ete>Perustetaan:</ete>
          <saa:MomenttiKooste>yksi A 11 palkkausluokkaan kuuluva toimistosihteerin virka; ja</saa:MomenttiKooste>
          <ete>1 päivästä elokuuta 1988 lukien:</ete>
          <saa:MomenttiKooste>yksi A 21 palkkausluokkaan kuuluva suunnittelijan virka.</saa:MomenttiKooste>
          <ete>Lakkautetaan:</ete>
          <saa:MomenttiKooste>yksi A 5 palkkausluokkaan kuuluva toimistovirkailijan virka.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="10 §">
          <saa:PykalaTunnusKooste>10 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Taiteen tukeminen </saa:SaadosOtsikkoKooste>
          <ete>Perustetaan 1 päivästä maaliskuuta 1988 lukien:</ete>
          <saa:MomenttiKooste>yksi A 14 palkkausluokkaan kuuluva osastosihteerin virka.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="11 §">
          <saa:PykalaTunnusKooste>11 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Suomen elokuva-arkisto </saa:SaadosOtsikkoKooste>
          <ete>Perustetaan 1 päivästä maaliskuuta 1988 lukien:</ete>
          <saa:MomenttiKooste>yksi A 22 palkkausluokkaan kuuluva apulaisjohtajan virka;</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 21 palkkausluokkaan kuuluva erikoistutkijan virka; ja</saa:MomenttiKooste>
          <saa:MomenttiKooste>kaksi A 20 palkkausluokkaan kuuluvaa erikoistutkijan virkaa.</saa:MomenttiKooste>
          <ete>Lakkautetaan 1 päivästä maaliskuuta 1988 lukien:</ete>
          <saa:MomenttiKooste>kaksi A 20 palkkausluokkaan kuuluvaa toimistopäällikön virkaa; ja</saa:MomenttiKooste>
          <saa:MomenttiKooste>yksi A 17 palkkausluokkaan kuuluva tutkijan virka.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="VoimaantuloPykala" saa1:identifiointiTunnus="12 §">
          <saa:PykalaTunnusKooste>12 §</saa:PykalaTunnusKooste>
          <saa:MomenttiKooste>Tämä asetus tulee voimaan 1 päivänä helmikuuta 1988.</saa:MomenttiKooste>
          <saa:MomenttiKooste>Toimenpiteisiin tällä asetuksella perustettujen virkojen täyttämiseksi saadaan ryhtyä jo ennen sitä ajankohtaa, josta lukien virka on perustettu.</saa:MomenttiKooste>
          <saa:MomenttiKooste>Tällä asetuksella perustetut virat, 8§:ssä mainittuja virkoja lukuun ottamatta, voidaan täyttää ensimmäisen kerran niitä haettaviksi julistamatta.</saa:MomenttiKooste>
        </saa:Pykala>
      </saa:Pykalisto>
    </saa:Saados>
  </saa:SaadosOsa>
