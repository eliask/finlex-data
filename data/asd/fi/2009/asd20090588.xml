              <tau:colspec COLNUM="1" COLNAME="1" COLWIDTH=""/>
              <tau:colspec COLNUM="2" COLNAME="2" COLWIDTH=""/>
              <tau:tbody VALIGN="TOP">
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>― hiilihydraatti</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>4 kcal/g – 17 kJ/g </sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>(lukuun ottamatta polyoleja) </sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste/>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>― polyolit</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>2,4 kcal/g – 10 kJ/g </sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste>― proteiini</sis:KappaleKooste>
