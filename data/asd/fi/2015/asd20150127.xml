    <met:Nimeke>
      <met1:NimekeTeksti>vaarallisten aineiden maakuljetusten turvallisuusneuvonantajasta annetun valtioneuvoston asetuksen muuttamisesta</met1:NimekeTeksti>
    </met:Nimeke>
  </asi:IdentifiointiOsa>
  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="fi" saa1:saadostyyppiNimi="Asetus">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Valtioneuvoston asetus</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>vaarallisten aineiden maakuljetusten turvallisuusneuvonantajasta annetun valtioneuvoston asetuksen muuttamisesta</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Valtioneuvoston päätöksen mukaisesti</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste><saa:SaadosKursiiviKooste>kumotaan</saa:SaadosKursiiviKooste> vaarallisten aineiden maakuljetusten turvallisuusneuvonantajasta annetun valtioneuvoston asetuksen (274/2002) 2 §:n 1 kohta,</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste><saa:SaadosKursiiviKooste>muutetaan</saa:SaadosKursiiviKooste> 3 §:n 2 momentin 3 kohdan a alakohta sekä 4 kohta, 5 §:n 2 momentin 3 kohta ja 13 §,</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste>sellaisina kuin niistä ovat 3 §:n 2 momentin 3 kohdan a alakohta asetuksessa 264/2009 sekä 3 §:n 2 momentin 4 kohta ja 13 § asetuksessa 476/2013, seuraavasti:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="3 §">
          <saa:PykalaTunnusKooste>3 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Turvallisuusneuvonantajan nimeämisvelvollisuus</saa:SaadosOtsikkoKooste>
          <sis:Katkoviiva/>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Turvallisuusneuvonantajaa ei kuitenkaan tarvitse nimetä, jos:</saa:MomenttiJohdantoKooste>
            <sis:Katkoviiva/>
            <saa:MomenttiKohtaKooste>3) toiminnanharjoittajan vaarallisten aineiden kuljetukset:</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>a) täyttävät vaarallisten aineiden kuljetuksesta tiellä annetun Liikenteen turvallisuusviraston määräyksen liitteen A kohdassa 1.1.3 tai 1.7.1.4 taikka luvussa 3.4 tai 3.5 säädetyt ehdot;</saa:MomenttiKohtaKooste>
            <sis:Katkoviiva/>
            <saa:MomenttiKohtaKooste>4) toiminnanharjoittajan vaarallisten aineiden kuljetukset täyttävät vaarallisten aineiden kuljetuksesta rautatiellä annetun Liikenteen turvallisuusviraston määräyksen liitteen kohdassa 1.1.3 tai 1.7.1.4 taikka luvussa 3.4 tai 3.5 säädetyt ehdot;</saa:MomenttiKohtaKooste>
            <sis:Katkoviiva/>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="5 §">
          <saa:PykalaTunnusKooste>5 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Turvallisuusneuvonantajan tehtävät</saa:SaadosOtsikkoKooste>
          <sis:Katkoviiva/>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Turvallisuusneuvonantajan tulee toiminnanharjoittajan toiminnassa:</saa:MomenttiJohdantoKooste>
            <sis:Katkoviiva/>
            <saa:MomenttiKohtaKooste>3) huolehtia siitä, että vaarallisten aineiden kuljetukseen liittyvästä toiminnasta laaditaan toiminnanharjoittajalle vuosittainen kertomus, joka on säilytettävä viisi vuotta ja pyydettäessä annettava vaarallisten aineiden kuljetuksia valvovalle ja muulle näissä kuljetuksissa toimivaltaiselle viranomaiselle tämän toimialaan kuuluvien tehtävien hoitamista varten ja liikenne- ja viestintäministeriölle tutkimustoimintaa varten;</saa:MomenttiKohtaKooste>
            <sis:Katkoviiva/>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="13 §">
          <saa:PykalaTunnusKooste>13 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Kysymysluettelo</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Liikenteen turvallisuusvirasto pitää luetteloa turvallisuusneuvonantajan kokeissa esitettävistä kysymyksistä.</saa:MomenttiKooste>
        </saa:Pykala>
        <sis:Palstaviiva/>
        <saa:Pykala saa1:identifiointiTunnus="Voimaantulo" saa1:pykalaLuokitusKoodi="VoimaantuloSaannos">
          <saa:MomenttiKooste>Tämä asetus tulee voimaan 1 päivänä maaliskuuta 2015.</saa:MomenttiKooste>
        </saa:Pykala>
      </saa:Pykalisto>
    </saa:Saados>
