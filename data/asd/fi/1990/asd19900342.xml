  <asi:LiiteOsa>
    <asi:SisaltoLiite>
      <sis:KappaleKooste>YKSIKKÖHINNAN ILMOITTAMISVELVOLLISUUDEN ALAAN KUULUVAT KULUTUSTAVARAT JA KULUTUSTAVARARYHMÄT </sis:KappaleKooste>
      <tau:table>
        <tau:tgroup cols="3" colsep="0" rowsep="0" align="left">
          <tau:colspec colnum="1" colname="1" colwidth=""/>
