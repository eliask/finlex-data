          <tau:colspec colnum="3" colname="3" colwidth=""/>
          <tau:tbody valign="top">
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>Tavara tai tavararyhmä</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>Muut ilmoittamista koskevat määräykset Pakkauskoot, joiden osalta yksikköhintaa ei tarvitse ilmoittaa</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>Mittayksikkö, jota kohden yksikköhinta ilmoitetaan</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>1. Ruokaleivät;  pakatut ja pakkaamattomat, myös näkkileivät</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste/>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>kg (saadaan ilmoittaa keskipainoon perustuvana)</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>2. Jauhot, ryynit, suurimot ja hiutaleet</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>500 g, 1 000 g ja kilon kerrannaiset</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>kg</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>3. Aamiaismurot ja niihin verrattavat vilja-ateriat</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>250 g, 500 g, 1 000 g</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>kg</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>4. Kidesokeri</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>500 g, 1 000 g</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>kg</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>5. Pakatut perunat, sipulit ja porkkanat</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>500 g, 1 000 g ja kilon kerrannaiset</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>kg</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>6. Maidot, kermat, piimät</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>1 dl, 2 dl, 5 dl, 1 litra</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>litra</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>7. Viilit ja jugurtit</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>1 dl, 2 dl, 5 dl, 1 litra</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>litra</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste/>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>myös: 100 g, 200 g, 500 g, 1 000 g</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>kg</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>8.Ruokaöljyt</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>5 dl, 1 litra</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>litra</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>9. Valmiiksi pakatut juustot, myös sulatejuustot</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>100 g ja sitä pienemmät pakkaukset, 1 000 g</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>kg</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>10. Valmiiksi pakatut makkarat ja lihavalmisteet</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>1 000 g</sis:KappaleKooste>
              </tau:entry>
              <tau:entry>
                <sis:KappaleKooste>kg</sis:KappaleKooste>
              </tau:entry>
            </tau:row>
            <tau:row>
              <tau:entry>
                <sis:KappaleKooste>11.Kahvi</sis:KappaleKooste>
