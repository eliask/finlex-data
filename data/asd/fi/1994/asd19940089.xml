                    <sis:KappaleKooste>yli 8 000</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste>600</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
