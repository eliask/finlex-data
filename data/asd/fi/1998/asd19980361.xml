  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="fi" saa1:saadostyyppiNimi="Asetus">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Asetus</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>valtion virkamiesten työaika-asetuksen 1 §:n muuttamisesta</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Valtiovarainministeriön toimialaan kuuluvia asioita käsittelemään määrätyn ministerin esittelystä</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste><saa:SaadosKursiiviKooste>muutetaan</saa:SaadosKursiiviKooste> 8 päivänä marraskuuta 1996 annetun valtion virkamiesten työaika-asetuksen (822/1996) 1 § seuraavasti:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="1 §">
          <saa:PykalaTunnusKooste>1 §</saa:PykalaTunnusKooste>
          <saa:KohdatMomentti>
            <saa:MomenttiJohdantoKooste>Työaikalakia ei sovelleta valtion virkamiehen työhön seuraavissa tehtävissä:</saa:MomenttiJohdantoKooste>
            <saa:MomenttiKohtaKooste>
1) ulkomaanedustuksessa;
</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
2) tuomioistuimen jäsenen, esittelijän, käräjäviskaalin ja notaarin tehtävissä;
</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
3) yleisen oikeusavustajan tehtävissä;
</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
4) yleisenä syyttäjänä;
</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
5) ulosottomies- ja haastemiestehtävissä; sekä
</saa:MomenttiKohtaKooste>
            <saa:MomenttiKohtaKooste>
6) luotsaus-, luotsikutterinkuljetus- ja väylänhoitotehtävissä.
</saa:MomenttiKohtaKooste>
          </saa:KohdatMomentti>
        </saa:Pykala>
        <sis:Palstaviiva/>
        <saa:Pykala saa1:identifiointiTunnus="Voimaantulo" saa1:pykalaLuokitusKoodi="VoimaantuloSaannos">
          <saa:MomenttiKooste>Tämä asetus tulee voimaan 1 päivänä kesäkuuta 1998</saa:MomenttiKooste>
        </saa:Pykala>
