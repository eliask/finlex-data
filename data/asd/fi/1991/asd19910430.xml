  <asi:IdentifiointiOsa>
    <met1:AsiakirjatyyppiNimi>Vahvistettava laki</met1:AsiakirjatyyppiNimi>
    <asi:EduskuntaTunniste>
      <met1:AsiakirjatyyppiKoodi>SDK</met1:AsiakirjatyyppiKoodi>
      <asi1:AsiakirjaNroTeksti>430</asi1:AsiakirjaNroTeksti>
      <asi1:ValtiopaivavuosiTeksti>1991</asi1:ValtiopaivavuosiTeksti>
    </asi:EduskuntaTunniste>
    <met:Nimeke>
      <met1:NimekeTeksti>pienyrittäjän vuosilomarahasta annetun asetuksen muuttamisesta</met1:NimekeTeksti>
    </met:Nimeke>
  </asi:IdentifiointiOsa>
  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="fi" saa1:saadostyyppiNimi="Asetus">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Asetus</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>pienyrittäjän vuosilomarahasta annetun asetuksen muuttamisesta</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Sosiaali- ja terveysministeriön toimialaan kuuluvia asioita käsittelemään määrätyn ministerin esittelystä</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste><saa:SaadosKursiiviKooste>kumotaan</saa:SaadosKursiiviKooste> pienyrittäjän vuosilomarahasta 10 päivänä kesäkuuta 1977 annetun asetuksen (450/77) 13-17§ sekä</saa:SaadosKappaleKooste>
        <saa:SaadosKappaleKooste><saa:SaadosKursiiviKooste>muutetaan</saa:SaadosKursiiviKooste> 4§:n 2 momentti, 8§, 9§:n 1 momentti sekä 10, 12 ja 18§ seuraavasti:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="4§">
          <saa:PykalaTunnusKooste>4§</saa:PykalaTunnusKooste>
          <sis:Katkoviiva/>
          <saa:MomenttiKooste>Neuvottelukunnan puheenjohtajan tulee olla sosiaali- ja &gt;terveysministeriöstä. Muiden jäsenten tulee edustaa ainakin valtiovarainministeriötä, kauppa- ja teollisuusministeriötä, kuntien keskusjärjestöjä, eläketurvakeskusta sekä pienyrittäjiä edustavia järjestöjä.</saa:MomenttiKooste>
          <sis:Katkoviiva/>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="8§">
          <saa:PykalaTunnusKooste>8§</saa:PykalaTunnusKooste>
          <saa:MomenttiKooste>Lomalautakunnan tulee huolehtia lomarahatoimintaa koskevan tarpeellisen tiedotustoiminnan järjestämisestä.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="9§">
          <saa:PykalaTunnusKooste>9§</saa:PykalaTunnusKooste>
          <saa:MomenttiKooste>Pienyrittäjän on tehtävä hakemus vuosilomarahan saamiseksi lomalautakunnalle kirjallisesti kunkin vuoden huhtikuun loppuun mennessä, jollei lomalautakunta toisin päätä.</saa:MomenttiKooste>
          <sis:Katkoviiva/>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="10§">
          <saa:PykalaTunnusKooste>10§</saa:PykalaTunnusKooste>
          <saa:MomenttiKooste>Jos lomalautakunta toteaa, että 9§:ssä säädettyyn ajankohtaan mennessä hakemuksia on tehty huomattavasti vähemmän kuin kunnassa olevien pienyrittäjien lukumäärä ilmeisesti edellyttää, lomalautakunnalla on oikeus jatkaa hakuaikaa enintään kahdella viikolla.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="12§">
          <saa:PykalaTunnusKooste>12§</saa:PykalaTunnusKooste>
          <saa:MomenttiKooste>Kunnan tulee toimittaa pienyrittäjälomalain 14§:ssä tarkoitettu tilitys lääninhallitukselle vuosittain huhtikuun loppuun mennessä.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="18§">
          <saa:PykalaTunnusKooste>18§</saa:PykalaTunnusKooste>
          <saa:MomenttiKooste>Tarkempia ohjeita tämän asetuksen täytäntöönpanosta antaa tarvittaessa sosiaali- ja terveysministeriö.</saa:MomenttiKooste>
        </saa:Pykala>
        <sis:Palstaviiva/>
        <saa:Pykala saa1:identifiointiTunnus="Voimaantulo" saa1:pykalaLuokitusKoodi="VoimaantuloSaannos">
          <saa:MomenttiKooste>Tämä asetus tulee voimaan 1 päivänä maaliskuuta 1991.</saa:MomenttiKooste>
        </saa:Pykala>
      </saa:Pykalisto>
    </saa:Saados>
  </saa:SaadosOsa>
