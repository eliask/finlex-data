  <saa:SaadosOsa>
    <saa:Saados met1:kieliKoodi="fi" saa1:saadostyyppiNimi="Päätös">
      <saa:SaadosNimeke>
        <saa:SaadostyyppiKooste>Valtioneuvoston päätös</saa:SaadostyyppiKooste>
        <saa:SaadosNimekeKooste>nurmikasvien siementuotannon kansallisesta tuesta</saa:SaadosNimekeKooste>
      </saa:SaadosNimeke>
      <saa:Johtolause>
        <saa:SaadosKappaleKooste>Valtioneuvosto on, eduskunnan myönnettyä tarkoitukseen varat, maa- ja metsätalousministeriön esittelystä päättänyt:</saa:SaadosKappaleKooste>
      </saa:Johtolause>
      <saa:Pykalisto>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="1 §">
          <saa:PykalaTunnusKooste>1 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Yleistä</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Nurmikasvien kylvösiemenhuollon turvaamiseksi käytetään valtion vuoden 1995 talousarviossa maa- ja puutarhatalouden kansalliseen tukeen osotettuja varoja sen mukaan kuin tässä päätöksessä määrätään.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="2 §">
          <saa:PykalaTunnusKooste>2 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Tukeen oikeuttava tuotanto</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Nurmikasvien siementuotannon tukea maksetaan puna-apilan, timotein, nurminadan, koiranheinän ja monivuotisen raiheinän siementuotannosta.</saa:MomenttiKooste>
          <saa:MomenttiKooste>Tukea maksetaan enintään seuraavalle tuotannon määrälle (ha):</saa:MomenttiKooste>
          <tau:table TOCENTRY="1" HCP="0">
            <tau:tgroup CHAROFF="50" CHAR="" cols="2" align="left">
              <tau:colspec colname="1" colwidth="30"/>
              <tau:colspec colname="2" colwidth="30"/>
              <tau:tbody valign="top">
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="1" MOREROWS="0" VALIGN="top">puna-apila</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="2" MOREROWS="0" VALIGN="top">800</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="1" MOREROWS="0" VALIGN="top">timotei</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="2" MOREROWS="0" VALIGN="top">5 000</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="1" MOREROWS="0" VALIGN="top">nurminata</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="2" MOREROWS="0" VALIGN="top">1 200</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="1" MOREROWS="0" VALIGN="top">koiranheinä</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="2" MOREROWS="0" VALIGN="top">30</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="1" MOREROWS="0" VALIGN="top">raiheinä</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="2" MOREROWS="0" VALIGN="top">160</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
              </tau:tbody>
            </tau:tgroup>
          </tau:table>
          <saa:MomenttiKooste>Tukea maksetaan vain nurmikasvien lajikkeista, jotka ovat kasvilajikelautakunnan pitämässä kasvilajikeluettelossa ja joista ei muualla yhteisön alueella ole siementuotantoa Suomen siemenhuoltoa varten. Tukea maksetaan vain sertifioidun siementavaran ja kauppasiemenen tuottamisesta.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="3 §">
          <saa:PykalaTunnusKooste>3 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Tuen suuruudesta päättäminen</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Tukea maksetaan käytettävissä olevan määrärahan puitteissa enintään seuraavasti (mk/ha):</saa:MomenttiKooste>
          <tau:table TOCENTRY="1" HCP="0">
            <tau:tgroup CHAROFF="50" CHAR="" cols="2" align="left">
              <tau:colspec colname="1" colwidth="30"/>
              <tau:colspec colname="2" colwidth="30"/>
              <tau:tbody valign="top">
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="1" MOREROWS="0" VALIGN="top">puna-apila</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="2" MOREROWS="0" VALIGN="top">2 700</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="1" MOREROWS="0" VALIGN="top">timotei</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="2" MOREROWS="0" VALIGN="top">1 350</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="1" MOREROWS="0" VALIGN="top">nurminata</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="2" MOREROWS="0" VALIGN="top">1 600</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="1" MOREROWS="0" VALIGN="top">koiranheinä</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="2" MOREROWS="0" VALIGN="top">2 000</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
                <tau:row>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="1" MOREROWS="0" VALIGN="top">raiheinä</sis:KappaleKooste>
                  </tau:entry>
                  <tau:entry>
                    <sis:KappaleKooste COLNAME="2" MOREROWS="0" VALIGN="top">2 400</sis:KappaleKooste>
                  </tau:entry>
                </tau:row>
              </tau:tbody>
            </tau:tgroup>
          </tau:table>
          <saa:MomenttiKooste>Maa-  ja  metsätalousministeriö  vahvistaa tuen suuruuden vuosittain ottaen huomioon, että siemenviljelyn tuotto tuki mukaan lukien ei ylitä keskimääräistä vertailujakson 1989/93 tuottoa.</saa:MomenttiKooste>
          <saa:MomenttiKooste>Kauppasiemenestä, josta ei makseta EU:n tukea saadaan maksaa korotettua kansallista tukea niin, että tuotto vastaa enintään 90 prosenttia 3 momentissa tarkoitetusta tuottotasosta.</saa:MomenttiKooste>
          <saa:MomenttiKooste>Päätöksen valmistelua varten ministeriö asettaa siemenmarkkinatyöryhmän.</saa:MomenttiKooste>
          <saa:MomenttiKooste>Kansallinen tuki määrätään 30 päivään huhtikuuta mennessä tarkastetun siemenmäärän perusteella.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="4 §">
          <saa:PykalaTunnusKooste>4 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Tuottamista koskevat ehdot</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Tukea maksetaan viljelijälle, joka on siemenliikkeen kanssa tehnyt siemenviljelysopimuksen, joka on rekisteröity kasvintuotannon tarkastuskeskuksen siementarkastusosastolla.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="5 §">
          <saa:PykalaTunnusKooste>5 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Tuen maksatus</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Kansallisen tuen maksatuksessa noudatetaan nurmikasvien siementuotannontukea koskevan EU:n regulaation hallinnoimisesta annetussa ministeriön päätöksessä määrättyä menettelyä.</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="6 §">
          <saa:PykalaTunnusKooste>6 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Oikaisu, takaisinperintä, valvonta ja salassapito</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Tässä päätöksessä tarkoitettujen tukien hallinnoinnissa noudatetaan oikaisun, maksetun tuen takaisinperinnän, valvonnan ja salassapitovelvollisuuden osalta maaseutuelinkeinojen tukitehtäviä hoidettaessa noudatettavasta menettelystä annettua lakia (1336/92).</saa:MomenttiKooste>
        </saa:Pykala>
        <saa:Pykala saa1:pykalaLuokitusKoodi="Pykala" saa1:identifiointiTunnus="7 §">
          <saa:PykalaTunnusKooste>7 §</saa:PykalaTunnusKooste>
          <saa:SaadosOtsikkoKooste>Voimaantulo</saa:SaadosOtsikkoKooste>
          <saa:MomenttiKooste>Tämä päätös tulee voimaan 13 päivänä huhtikuuta 1995.</saa:MomenttiKooste>
          <saa:MomenttiKooste>Tukea voidaan kuitenkin maksaa vasta sen jälkeen kun EU:n komissio on sen hyväksynyt.</saa:MomenttiKooste>
        </saa:Pykala>
      </saa:Pykalisto>
    </saa:Saados>
