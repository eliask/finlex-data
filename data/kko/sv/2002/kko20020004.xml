    <p>
      <strong>Försäkringsavtal</strong>
      <span>Preskription av försäkringsersättning</span>
    </p>
  </dcterms:description>
  <finlex:registerNumber>S2001/429</finlex:registerNumber>
  <dcterms:date pvm="20011113">2001-11-13</dcterms:date>
