    <p>
      <strong>Rättegångskostnader</strong>
      <span>Erbjudande om förlikning</span>
    </p>
  </dcterms:description>
  <finlex:registerNumber>S2007/478</finlex:registerNumber>
  <dcterms:date pvm="20080227">2008-02-27</dcterms:date>
